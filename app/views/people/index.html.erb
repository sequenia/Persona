<p id="notice"><%= notice %></p>

<%= form_for(Person.new) do |f| %>

<div class="hero-unit" style="font-size:14px; padding-top: 10px; padding-bottom: 10px;">
    <b style="font-size:20px;">Новая персона:</b><br/>
    <b>Имя:</b><br>
    <%= f.text_field :name %><br>
    <b>Дата рождения:</b><br>
    <%= f.date_field :birth %><br>
    <%= f.submit :class => "btn btn-primary", :value => "Создать" %> 
</div>


<% end %>

<div class="hero-unit" style="padding-top: 10px; padding-bottom: 0px;">

    <table id="navigationTable" class="table table-bordered table-condensed" style="width: 100%;">

        <tr>
            <td style="text-align: center; font-size:20px; padding:10px; vertical-align: top; width: 50%;">
                <b>Первая персона:</b>
                <select name="firstPersons" id="firstPersons" onchange="plotAccordingToChoicesChangePerson(0)">
                </select>
                <div id = "firstNameEdit">
                </div>
            </td>
            <td style="text-align: center; font-size:20px; padding:10px; vertical-align: top; width: 50%;">
                <b>Вторая персона:</b>
                <select name="otherPersons" id="otherPersons" onchange="plotAccordingToChoicesChangePerson(1)">
                </select>
                <div id = "secondNameEdit">
                </div>
            </td>
        </tr>

        <tr>
            <td style="text-align: center; font-size:14px; padding:10px; vertical-align: top; width: 50%;">
                <div id="firstBirth" align="center"></div>
            </td>
            <td style="text-align: center; font-size:14px; padding:10px; vertical-align: top; width: 50%;">
                <div id="secondBirth" align="center"></div>
            </td>
        </tr>

        <tr>
            <td style="text-align: center; left; font-size:12px; padding:10px; vertical-align: top;">
                <div id="firstDates" align="center"></div>
            </td>
            <td style="text-align: center; left; font-size:12px; padding:10px; vertical-align: top;">
                <div id="secondDates" align="center"></div>
            </td>
        </tr>

        <tr>
            <td style="padding:10px; font-size:12px; vertical-align: top; text-align: center; width: 50%;">
                <div id='choicestable' align="center"></div>
            </td>
            <td style="padding:10px; font-size:12px; vertical-align: top; text-align: center; width: 50%;">
                <div id='choicestableotherperson' align="center"></div>
            </td>
        </tr>

    </table>

<%= render "graph2"%>
<br>
</div>
