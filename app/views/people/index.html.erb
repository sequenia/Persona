<h1>Все персоны:</h1>
<div class="hero-unit">
<table>
  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.name %></td>
        <td><%= link_to 'Показать', person %></td>
        <td><%= link_to 'Редактировать', edit_person_path(person) %></td>
        <td><%= link_to 'Удалить', person, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

   <%= link_to 'Создать новую персону', new_person_path, :class => 'btn btn-primary'%> 
</div>